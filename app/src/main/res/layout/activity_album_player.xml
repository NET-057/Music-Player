<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Grey"
    android:id="@+id/parentpanel"
    tools:context="com.android.mytechlab.androplayer.Activity.Album_player">

    <android.support.v7.widget.Toolbar
        android:id="@+id/album_player_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:theme="@style/TransparentBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:text="Albums"/>
    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_upper"
        android:layout_weight="60"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <LinearLayout
        android:id="@+id/albumandartist"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:elevation="80dp"
        android:weightSum="100"

        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_weight="50"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/album_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:singleLine="true"
                    android:text="Album name"
                    android:textColor="@color/White"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:singleLine="true"
                    android:text="Artist name"
                    android:textColor="@color/White"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="50"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/back"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/White"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/as"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="@color/White"
                    android:textSize="15dp"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/song_list"
        android:elevation="80dp"
        android:layout_margin="20dp"
        android:layout_below="@id/albumandartist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lower_part"
        android:layout_weight="40"
        android:layout_alignParentBottom="true"
        android:paddingTop="2dp"
        android:layout_below="@id/main_upper"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/nowplaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="100"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="50"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadeScrollbars="false"
                        android:id="@+id/nowplay"

                        android:singleLine="true"
                        android:text="Now Playing"
                        android:textColor="@color/White"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/song_name_alb_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:maxLines="1"
                        android:text="Song name"
                        android:textColor="@color/White"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Album"
                        android:textColor="@color/White"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/current_album"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="right"
                        android:maxLines="1"
                        android:text="Alb name"
                        android:textColor="@color/White"
                        android:textSize="15dp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/threeinone"
            android:layout_below="@id/nowplaying"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shuffle"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_shuffle_black_24dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"/>


                <ImageView
                    android:id="@+id/repeat"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_repeat_one_black_24dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"/>
            </LinearLayout>


        </LinearLayout>

        <SeekBar
            android:layout_below="@+id/threeinone"
            android:layout_marginTop="5dp"
            android:id="@+id/forward"
            android:thumbTint="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forward"
            android:textColor="@color/White"
            android:layout_marginStart="18dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/totaltime_alb_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:layout_alignBottom="@+id/starttime"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:text="TextView" />

        <RelativeLayout
            android:layout_below="@id/totaltime_alb_player"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/playandpause"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/album_play"
                android:layout_centerHorizontal="true"
                android:text="Button" />

            <ImageView
                android:id="@+id/prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_skip_previous_black_24dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/playandpause"
                android:text="Button" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:layout_toEndOf="@+id/playandpause" />
        </RelativeLayout>

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>