<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:elevation="5dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:id="@+id/cardrelative"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="80"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/small_banner"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/artist1"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/artist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Song name"
                            android:textColor="@color/recycler_song_color"
                            android:singleLine="true"
                            android:textSize="15sp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/track_count"
                                android:layout_below="@+id/song_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Artist Name"
                                android:textColor="@color/recycler_song_color"
                                android:singleLine="true"
                                android:textSize="10sp"
                                />
                            <TextView
                                android:id="@+id/album_count"
                                android:layout_marginLeft="15dp"
                                android:layout_below="@+id/artist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Artist Name"
                                android:textColor="@color/recycler_song_color"
                                android:singleLine="true"
                                android:textSize="10sp"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:layout_weight="20"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent">-->
                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent">-->

                        <!--<ImageView-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_width="20dp"-->
                            <!--android:src="@drawable/ic_play_circle_filled_white_black_24dp"-->
                            <!--android:layout_height="20dp" />-->
                    <!--</RelativeLayout>-->

                <!--</LinearLayout>-->


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>