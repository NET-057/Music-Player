<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shake_head"
        android:text="Shake Action"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_below="@id/shake_head"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton_no_action"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/setting_dialog_shake_radiobutton_padding"
            android:paddingBottom="@dimen/setting_dialog_shake_radiobutton_padding"
            android:layout_height="wrap_content"
            android:text="No Action"
            android:textColor="@color/lightblack1"
            android:fontFamily="sans-serif-medium"
            android:buttonTint="@color/Themecolor"
            android:textSize="@dimen/setting_dialog_shake_radiobutton_fontsize"/>

        <RadioButton
            android:id="@+id/radioButton_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/Themecolor"
            android:paddingBottom="@dimen/setting_dialog_shake_radiobutton_padding"
            android:paddingTop="@dimen/setting_dialog_shake_radiobutton_padding"
            android:textColor="@color/lightblack1"
            android:fontFamily="sans-serif-medium"
            android:text="Pause Song"
            android:textSize="@dimen/setting_dialog_shake_radiobutton_fontsize" />

        <RadioButton
            android:id="@+id/radioButton_next"
            android:paddingTop="@dimen/setting_dialog_shake_radiobutton_padding"
            android:paddingBottom="@dimen/setting_dialog_shake_radiobutton_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Song"
            android:textColor="@color/lightblack1"
            android:fontFamily="sans-serif-medium"
            android:buttonTint="@color/Themecolor"
            android:textSize="@dimen/setting_dialog_shake_radiobutton_fontsize"/>

        <RadioButton
            android:id="@+id/radioButton_prev"
            android:paddingTop="@dimen/setting_dialog_shake_radiobutton_padding"
            android:paddingBottom="@dimen/setting_dialog_shake_radiobutton_padding"
            android:textColor="@color/lightblack1"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/Themecolor"
            android:text="Previous Song"
            android:textSize="@dimen/setting_dialog_shake_radiobutton_fontsize"/>
    </RadioGroup>

    <LinearLayout
        android:layout_below="@id/radioGroup"
        android:layout_width="match_parent"
        android:gravity="right"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:textColor="@color/Themecolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />


        <TextView
            android:id="@+id/ok"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/Themecolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"
            />


    </LinearLayout>

</RelativeLayout>