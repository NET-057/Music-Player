<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/gradient_10"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/album_image_back"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Empty album"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="10dp"
        android:alpha="1"
        android:id="@+id/empty_album"
        android:textColor="@color/White"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:layout_height="match_parent" />

    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/recycler_album_expand"
        android:scrollbarSize="3dp"
        android:alpha="1"
        android:elevation="10dp"
        app:fastScrollAutoHide="true"
        app:fastScrollPopupBgColor="@color/Themecolor"
        app:fastScrollPopupTextSize="40sp"
        app:fastScrollPopupBackgroundSize="60dp"
        app:fastScrollThumbColor="@color/fastScrollThumbColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>