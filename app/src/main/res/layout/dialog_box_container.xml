<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:background="@drawable/dialog_song_background"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading_container"
            android:text="Title"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/play_dialog"
            android:text="Play"
            android:textSize="16dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/delete_dialog"
            android:text="Delete"
            android:textSize="16dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/send_dialog"
            android:text="Send"
            android:textSize="16dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/set_ringtone_dialog"
            android:text="Set Ringtone"
            android:textSize="16dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_to_playlist"
            android:text="Add to PlayList"
            android:textSize="16dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_dialog"
            android:text="Detail"
            android:textSize="16dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

